@model IEnumerable<CarBrandView>
@{
    ViewData["Title"] = "Models";
}

<h1>Models</h1>
<hr />
<div>
    @*<h4></h4>*@
    <hr />
       <table class="table table-dark">
     
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Body Type</th>
                    <th scope="col">Initial Year</th>
                    <th scope="col">Final Year</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                     int i = 1;
                     @foreach (var m in item?.BrandModels?.OrderBy(x=>x.Name))
                     {
                        <tr>
                            <td>@i</td>
                            <td>@m.BrandId</td>
                            <td>@m.Name</td>
                            <td>@m.TypeCar</td>
                            <td>@m.BodyType</td>
                            <td>@m.InitialYear</td>
                            <td>@m.FinalYear</td>
                        </tr>
                        i++;
                    }
                 }
            </tbody>
    </table>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { @id = Model }) |
    <a asp-action="Index">Back to List</a>
</div>
