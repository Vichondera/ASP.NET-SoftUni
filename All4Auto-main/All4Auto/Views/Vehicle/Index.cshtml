@using All4Auto.Core.Models.Vehicle;
@model IEnumerable<CarModelView>

@{
    ViewData["Title"] = "Brands ";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Available Models</th>
            <th scope="col">View</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Models?.Count()</td>
                <td>
                    @Url.ActionContext.RouteData.Values["id"]

                    <a class="navbar-brand" asp-controller="Vehicle" asp-action="GetBrandById(@Url.ActionContext.RouteData.Values["id"])">
                        <div style="height:100%;width:100%"> Go To @item.Name </div>
          
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
