<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]youR AUTO World!</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/js/clock.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/All4Auto.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark  border-bottom box-shadow mb-3">
            <div class="container-xl">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">All4Auto</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                <div class="collapse navbar-collapse" id="navbarsExample07XL">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Vehicle" asp-action="Index">Makes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="SparePart" asp-action="Index">Spare Parts</a>
                        </li>
                         @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" asp-area="Garage" asp-controller="Home" asp-action="Index">My Garage</a>
                                <ul class="dropdown-menu" aria-labelledby="dropdown07XL">

                                    <li><a class="dropdown-item" asp-area="Garage" asp-controller="Home" asp-action="Index">View</a></li>
                                    <li><a class="dropdown-item" asp-area="Garage" asp-controller="Garage" asp-action="AddVehicle">Add Vehicle</a></li>
                                    <li><a class="dropdown-item" asp-area="Garage" asp-controller="Garage" asp-action="ServiceBook">Service Book</a></li>

                                </ul>
                            </li>
                        }
                    </ul>
                    <form>
                        <input class="form-control" type="text" placeholder="Search" aria-label="Search">
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - All4Auto.eu -> youR AUTO World! - <a asp-area="" asp-controller="Home" asp-action="Index">Index</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>